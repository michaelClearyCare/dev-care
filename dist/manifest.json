{
  "manifest_version": 2,
  "name": "Dev Care",
  "description": "Developer tools to make you smile",
  "version": "0.0.2",
  "browser_action": {
    "default_icon": "careLogoLight.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.carezen.net/*",
        "https://care.com/*"
      ],
      "js": [
        "js/contentScript.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "devtools_page": "devtools.html",
  "icons": {
    "16": "careLogoDark.png",
    "48": "careLogoDark.png",
    "128": "careLogoDark.png"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "http://127.0.0.1/*",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self'; script-src-elem 'self' 'nonce-devtools'; object-src 'self'"
}
